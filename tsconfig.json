{
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES5",
    "baseUrl": "./src",
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "src/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
    }
  },
  "include": [
    "src"
  ],
}
